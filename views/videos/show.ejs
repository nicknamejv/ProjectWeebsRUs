
<!DOCTYPE html>
<html lang="en">

    <!-- Head Partial -->
    <%- include('../partials/head/_head') %> 

<body>
    
    <h1 class='title'>
        Weebs R Us - Show Page
    </h1>

    <a href="/video"><button>Video Index</button></a>
    <a href="/comment"><button>Comment Index</button></a>

    <section id="video">
            <ul class="video_list">
                <li>
                    <b>Title:</b>
                    <%= videos.title %>
                </li>
                <li>
                    <b>ID:</b>
                    <%= videos.id %>
                </li>
                <li>
                    <b>Image:</b> <%= videos.videoImage %>
                </li>
                <li>
                    <b>Description:</b> <%= videos.description %>
                </li>
                <li>
                    <b>Genre:</b> <%= videos.genre %>
                </li>
                <li>
                    <iframe 
                    width="420" 
                    height="315"
                    src="<%= videos.videoLink %>">
                    </iframe>
                </li>
                <li>
                    <b>Recommended?</b>
                    <%= videos.isRecommended %>
                </li>
            </ul>
    </section>
    <section class="comment_form">
        <form action="/comment?redirect=video%2F<%= videos._id %> " method="POST">
            <div>
                <label for="username_comment">Username</label>
                <input 
                type="text" 
                name="username" 
                placeholder="Username"
                >
            </div>

            <div>
                <label for="comment_content">Content</label>
                <input 
                type="text" 
                name="content" 
                placeholder="Have a comment?"
                >
            </div>

            <!-- Here is our hidden input to provide the product id -->
            <input 
            type="hidden"
            name="video"
            value="<%= videos._id %>"/>

            <div>
                <button>Submit</button>
            </div>
        </form>
    </section>

    <section id="comment">
        <% comments.forEach(allComment => { %>
            <ul class="comment_list">
                <li>
                    <b>Username:</b> <%= allComment.username %> 
                </li>
                <li>
                    <b>Content:</b> <%= allComment.content %>
                    <small>
                    <%= new Date(allComment.createdAt).toLocaleString() %>
                    </small> 
                </li>
            </ul>
        <% }) %>
    </section>
    
    
</body>
</html>