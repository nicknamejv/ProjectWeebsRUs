
<!DOCTYPE html>
<html lang="en">

    <!-- Head Partial -->
    <%- include('../partials/head/_head') %> 

<body>
    
    <h1 class='title'>
        Weebs R Us - Show Page
    </h1>

    <a href="/index"><button>Video Index</button></a>

    <p id="video">
        <% videos.forEach(foundVideo => { %>
            <ul class="video_list">
                <li>
                    <b>Title:</b>
                    <%= foundVideo.title %>
                </li>
                <li>
                    <b>ID:</b>
                    <%= foundVideo.id %>
                </li>
                <li>
                    <b>Image:</b> <%= foundVideo.videoImage %>
                </li>
                <li>
                    <b>Description:</b> <%= foundVideo.description %>
                </li>
                <li>
                    <b>Genre:</b> <%= foundVideo.genre %>
                </li>
                <li>
                    <iframe width="420" height="315"
                    src="<%= foundVideo.videoLink %>">
                    </iframe>
                </li>
                <li>
                    <b>Recommended?</b> <%= foundVideo.isRecommended %>
                </li>
            </ul>
        <% }); %> 
    </p>
    
</body>
</html>